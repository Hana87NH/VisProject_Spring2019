{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "title": "Citibike Station Usage Visualization",
  "hconcat":[{
    "title": "Station 72",
    "data": {
      "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/test.csv"
    },
    "vconcat": [{
      "title": "Detail View",
      "width": 550,
      "height": 350,
      "mark": "area",
      "transform":[{"filter": "datum.types == 'bikes'"}],
      "encoding": { 
        "x": {
          "field": "time",
          "type": "temporal",
          "scale": {"domain": {"selection": "brush"}},
          "axis": {"title": "Time"}
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {"title": "Number of bikes"}
        }
      }
    },{
      "title": "Overiew April 2018",
      "width": 550,
      "height": 180,
      "transform":[{
        "filter": "datum.station_id == 72"
      }],
      "encoding":{
        "x": {
          "field": "time",
          "type": "temporal",
          "axis": {"title": "Time"}
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "stack":"normalize",
          "axis": null
        },
        "color":{
          "field": "types",
          "type": "nominal",
          "scale": {"scheme": "darkblue"}
        }
      },
      "layer": [{
        "mark": {"type": "area","opacity": 0.5},
        "selection": {
          "brush": {"type": "interval","encodings": ["x"]}
        }
      },{
        "transform": [{"filter": {"selection": "brush"}}],
        "mark": {"type": "area", "color": "steelblue"}
      }]
    }]
  },{
    "title": "Citibike Stations Map",
    "layer": [{
      "width": 500,
      "height": 620,
      "data": {
        "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/NYC_simplified.json",
        "format": {
          "type":"topojson",
          "feature": "boroughs"
        }
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.15
      },
      "encoding": {"color": {"value": "#f2f2f2"}}
    },{
      "data": {
        "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/bikeStationLongLat.csv"
      },
      "projection": {"type": "mercator"},
      "mark": {"type":"circle","fillOpacity":0.9},
      "selection": {
        "pts": {
          "fields": ["StationID"],
          "type": "single",
          "encodings": ["longitude","latitude"]
        }
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "condition": {"selection": "pts","value": 220},
          "value": 60
        },
        "color": {
          "field": "EventCount",
          "type": "quantitative",
          "scale":{
            "reverse": true,
            "domain": [0,3000,12000],
            "scheme": "spectral"
          }
        },
        "tooltip": {"field": "StationName","type": "nominal"}
      }
    }]
  }]
}