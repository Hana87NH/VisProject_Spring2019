{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "hconcat":[{
    "title": "Station 471",
    "data": {
      "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/one_station.csv"
    },
    "vconcat": [{
      "title": "Detail View",
      "width": 600,
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Time",
          "type": "ordinal",
          "scale": {"domain": {"selection": "brush"}},
          "axis": {"title": "Time"}
        },
        "y": {
          "field": "471",
          "type": "quantitative",
          "axis": {"title": "Number of bikes"}
        }
      }
    },
    {
      "title": "Overiew April 2018",
      "width": 600,
      "height": 100,
      "mark": "line",
      "selection": {
        "brush": {"type": "interval", "encodings": ["x"]}
      },
      "encoding": {
        "x": {
          "field": "Time",
          "type": "ordinal"
        },
        "y": {
          "field": "471",
          "type": "quantitative",
          "axis": {
            "tickCount": 3,
            "grid": false,
            "title": "Number of bikes"
          }
        }
      }
    }]
  },

    {
      "layer": [
        {
          "data": {
            "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/NYC_simplified.json",
            "format": {
              "type":"topojson",
              "feature": "boroughs"
            }
          },
          "projection": {
            "type": "mercator"
          },
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.25
          },
          "encoding": {
            "color": {
              "value": "#e8e3d3"
            }
          },
        "width": 500,
        "height": 680
        },
        {
          "data": {
            "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/bikeStationLongLat.csv"
          },
          "projection": {
            "type": "mercator"
          },
          "mark": "circle",
          "encoding": {
            "longitude": {
              "field": "Longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Latitude",
              "type": "quantitative"
            },
            "size": {"value": 20},
            "color": {"value": "blue"},
            "tooltip": {
              "field": "Station Name",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ]
}