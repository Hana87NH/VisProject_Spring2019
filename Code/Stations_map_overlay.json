{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "hconcat":[{
    "title": "Station 471",
    "data": {
      "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/one_station.csv"
    },
    "vconcat": [{
      "title": "Detail View",
      "width": 600,
      "height": 350,
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Time",
          "type": "temporal",
          "scale": {"domain": {"selection": "brush"}},
          "axis": {"title": "Time"}
        },
        "y": {
          "field": "72",
          "type": "quantitative",
          "axis": {"title": "Number of bikes"}
        }
      }
    },{
      "title": "Overiew April 2018",
      "width": 600,
      "height": 150,
      "encoding":{
        "x": {
          "field": "Time",
          "type": "temporal"
        },
        "y": {
          "field": "72",
          "type": "quantitative",
          "axis": {
            "tickCount": 3,
            "grid": false,
            "title": "Number of bikes"
          }
        }
      },
      "layer": [{
        "selection": {
          "brush": {
            "type": "interval",
            "encodings": ["x"]
          }
        },
        "mark": {"type": "area", "color": "grey"}
      }, {
        "transform": [
          {"filter": {"selection": "brush"}}
        ],
        "mark": {"type": "area", "color": "steelblue"}
      }]
    }]
  },{
    "layer": [{
      "width": 500,
      "height": 620,
      "data": {
        "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/NYC_simplified.json",
        "format": {
          "type":"topojson",
          "feature": "boroughs"
        }
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.25
      },
      "encoding": {
        "color": {
          "value": "#f2f2f2"
        }
      }
    },{
      "data": {
        "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/bikeStationLongLat.csv"
      },
      "projection": {
        "type": "mercator"
      },
      "mark": "circle",
      "selection": {
        "pts": {
          "type": "single",
          "encodings": ["longitude","latitude"]
        }
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "condition": {
            "selection": "pts",
            "value": 220
          },
          "value": 60
        },
        "color": {
          "field": "EventCount",
          "type": "quantitative",
          "scale":{
            "reverse": true,
            "domain": [0,3000,12000],
            "scheme": "spectral"
          }
        },
        "tooltip": {
          "field": "StationName",
          "type": "nominal"
        }
      }
    }]
  }]
}