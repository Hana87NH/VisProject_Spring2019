{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "hconcat":[
    {
      "data": {
        "url": "data/weather.csv"
      },
      "vconcat": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "timeUnit": "month",
              "field": "date",
              "type": "ordinal"
            },
            "y": {
              "aggregate": "mean",
              "field": "precipitation",
              "type": "quantitative"
            }
          },
          "width": 600,
          "height": 200
        },
        {
          "mark": "point",
          "encoding": {
            "x": {
              "field": "temp_min",
              "type": "quantitative",
              "bin": true
            },
            "y": {
              "field": "temp_max",
              "type": "quantitative",
              "bin": true
            }
          },
          "width": 600,
          "height": 200
        }
      ]
    },
    {
      "layer": [
        {
          "data": {
            "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/NYC_withoutSI.json",
            "format": {
              "type":"topojson",
              "feature": "boroughs"
            }
          },
          "projection": {
            "type": "albersUsa"
          },
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.25
          },
          "encoding": {
            "color": {
              "value": "#e8e3d3"
            }
          },
        "width": 700,
        "height": 700
        },
        {
          "data": {
            "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/bikeStationLongLat.csv"
          },
          "projection": {
            "type": "albersUsa"
          },
          "mark": "circle",
          "encoding": {
            "longitude": {
              "field": "Longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Latitude",
              "type": "quantitative"
            },
            "size": {"value": 20},
            "color": {"value": "blue"},
            "tooltip": {
              "field": "Station Name",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ]
}