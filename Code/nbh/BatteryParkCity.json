{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "title": "Citibike Station Usage Visualization",
  "hconcat":[{
    "title": "Battery Park City",
    "data": {
      "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/neighborhoodCSVs/BatteryParkCity.csv"
    },
    "vconcat": [{
      "title": "Detail View",
      "width": 550,
      "height": 300,
      "mark": "bar",
      "transform":[
        {"filter":{"selection": "pts"}}
      ],
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal",
          "scale": {"domain": {"selection": "brush"}},
          "axis": {
            "title": "Time",
            "formatType": "time",
            "format": "%a %I:%p",
            "labelAngle": -45
          }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "stack":"normalize",
          "axis": null
        },
        "color":{
          "field": "types",
          "type": "nominal",
          "scale": {"range":["#adbac0","#22a1c2"]}
        }
      }
    },{
      "title": "Overiew April 2018",
      "width": 550,
      "height": 150,
      "mark": {"type": "bar", "color": "#22a1c2"},
      "selection": {
          "brush": {"type": "interval","encodings": ["x"]}
      },
      "transform":[
        {"filter":{"selection": "pts"}},
        {"filter": "datum.types == 'bikes'"}
      ],
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal",
          "scale": {"domain": {"selection": "brush"}},
          "axis": {
            "title": "Time",
            "formatType": "time",
            "format": "%m/%d/%y",
            "labelAngle": -45
          }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {"title": "Number of bikes"}
        },
        "fillOpacity":{
          "condition":{"selection": "brush","value": 1},
          "value":0.1
        }
      }
    }]
  },{
  "title": "Battery Park City Station Map",
  "width": 400,
  "height": 600,
  "projection": {"type": "albersUsa"},
  "layer": [
    {
    "data": {
      "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/NYC_topo.json",
      "format": {
        "type":"topojson",
        "feature": "NYC_neighborhood"
      }
    },
    "transform":[{
      "filter": "datum.properties.neighborhood == 'Battery Park City'"
    }],
    "mark": {
      "type": "geoshape",
      "stroke": "black",
      "strokeWidth": 0.15
    },
    "encoding": {"color": {"value": "#f2f2f2"}}
  },
    {
      "data": {
        "url": "https://raw.githack.com/Hana87NH/VisProject_Spring2019/master/Data/bikeStationLongLat.csv"
    },
      "transform":[{
      "filter": "datum.neighborhood == 'Battery Park City'"
      }],
      "encoding": {
        "longitude":
        {"field": "longitude", "type": "quantitative"},
        "latitude":
        {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
        "mark": {"type": "circle", "color": "orange"},
        "selection": {
          "pts": {
            "fields": ["stationID"],
            "type": "single",
            "encodings": ["longitude","latitude"]
          }
        },
        "encoding":{
          "size": {
            "condition": {"selection": "pts","value": 2000},
            "value": 900
          },
          "fillOpacity":{
            "condition":{"selection": "pts","value": 1},
            "value":0.7
          },
          "color": {
            "field": "eventCount",
            "type": "quantitative",
            "scale":{
              "reverse": true,
              "domain": [0,2000,10000],
              "scheme": "spectral"
            }
          },
          "tooltip":[
            {"field": "stationName",
            "type": "nominal",
            "title":"Station Name"}
          ]
        }},{
        "mark": {"type": "text"},
        "encoding": {
          "text": {"field": "stationID", "type": "nominal"},
          "color":{"value": "darkblue"},
          "tooltip":[
            {"field": "stationName",
            "type": "nominal",
            "title":"Station Name"}
          ]
        }
        }
      ]
    }
  ]
}]
}
